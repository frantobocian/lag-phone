<script>
const screen = document.getElementById("screen");
const messages = [
    "BOOT: inicjalizacja systemu...",
    "SYS: sprawdzanie pamiƒôci",
    "SYS: analiza proces√≥w",
    "WARN: niestabilny modu≈Ç CPU",
    "LOG: debug kernel",
    "ERROR: op√≥≈∫nienie wykryte",
    "SYSTEM: przej≈õcie do trybu awaryjnego",
    "WARNING: nie wy≈ÇƒÖczaj urzƒÖdzenia!",
    "LOG: nadpisywanie rejestr√≥w",
    "DEBUG: generowanie losowych alert√≥w",
    "WARN: krytyczna reakcja",
    "INFO: uruchamianie interfejsu serwisowego",
    "LOG: testowanie wej≈õƒá u≈ºytkownika",
    "SYSTEM: przyspieszanie proces√≥w",
    "PANIC: migajƒÖce logi..."
];

// Funkcja dodajƒÖca linie log√≥w
let delay = 0;
messages.forEach(msg => {
    setTimeout(() => {
        const div = document.createElement("div");
        div.className = "line";
        div.textContent = "> " + msg;
        screen.appendChild(div);
        screen.scrollTop = screen.scrollHeight;
    }, delay);
    delay += 100; // szybkie logi
});

// Funkcja migajƒÖcego ekranu
const colors = ["#000","#f00","#0f0","#0ff","#f0f"];
setInterval(() => {
    document.body.style.background = colors[Math.floor(Math.random()*colors.length)];
    document.body.style.color = colors[Math.floor(Math.random()*colors.length)];
}, 80);

// Latarka (tylko na kompatybilnych telefonach)
async function flashTorch() {
    try {
        const stream = await navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } });
        const track = stream.getVideoTracks()[0];
        const imageCapture = new ImageCapture(track);
        const cap = await imageCapture.getPhotoCapabilities();
        if (cap.torch) {
            let on = false;
            setInterval(() => {
                track.applyConstraints({ advanced: [{ torch: on }] });
                on = !on;
            }, 100);
        }
    } catch(e){
        console.log("Latarka niedostƒôpna:", e);
    }
}
flashTorch();

// Ko≈Ñcowy komunikat
setTimeout(() => {
    const f = document.createElement("div");
    f.style.fontSize = "16px";
    f.innerHTML = `
‚úî SYSTEM ZAKO≈ÉCZONY<br>
To by≈Ç test reakcji u≈ºytkownika üòè
    `;
    screen.appendChild(f);
    screen.scrollTop = screen.scrollHeight;
}, delay + 200);
</script>

